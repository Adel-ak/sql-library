extends layout.pug

block content
  h1 New Book
  form(action="/books/new" method="post")
    h2.error Oooops!
    ul.error
      each val in data
        li #{val.message}
    p
      label(for='title') Title
      input#title(name='title' type='text' value=`${value.title}`)
    p
      label(for='author') Author
      input#author(name='author' type='text' value=`${value.author}`)
    p
      label(for='genre') Genre
      input#genre(name='genre' type='text' value=`${value.genre}`)
    p
      label(for='year') Year
      input#year(name='year' type='text' value=`${value.year}`)
    p
      input(type='submit' value='Create New Book')
    p
      a.button(href='/') Cancel
